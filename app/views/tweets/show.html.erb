<div>
<section>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @tweet %>

    <%if @tweet.user_id == current_user.id %>
      <%= link_to 'Edit tweet', edit_tweet_path(@tweet), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Delete tweet', tweet_path(@tweet), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %> 
   
    <%= link_to 'Back to tweets', tweets_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    
  </div>
</div>

</section>
<section class="mt-5">

<h1> Comments </h1>

  <div class="flex justify-between items-center">
    <% if user_signed_in? %>
      <%= render "comments/form", comment: @comment %>
    <% end %>
  </div>

  <div id="comments" class="min-w-full">
    <%= render @comments %>
  </div>

</section>
